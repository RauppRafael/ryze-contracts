{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "warn",
            "0.8.13"
        ],
        "func-visibility": [
            "error",
            {
                "ignoreConstructors": true
            }
        ],
        "not-rely-on-time": [
            "off"
        ]
    }
}
